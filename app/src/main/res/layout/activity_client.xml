<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ClientActivity">

    <TextView
        android:id="@+id/client_info_tv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />


    <Button
        android:id="@+id/show_bank_accounts_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Accounts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/client_info_tv"
        app:layout_constraintStart_toStartOf="@+id/client_info_tv"
        app:layout_constraintTop_toBottomOf="@+id/client_info_tv"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/show_credits_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Credits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/show_bank_accounts_btn"
        app:layout_constraintStart_toStartOf="@+id/show_bank_accounts_btn"
        app:layout_constraintTop_toBottomOf="@+id/show_bank_accounts_btn"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/apply_salary_project_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply for a salary project "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/show_credits_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/show_credits_btn"
        app:layout_constraintTop_toBottomOf="@+id/show_credits_btn"
        app:layout_constraintVertical_bias="0.11" />


</androidx.constraintlayout.widget.ConstraintLayout>